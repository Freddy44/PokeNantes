{% extends 'NosBundlesProductBundle::layout.html.twig' %}

{# -- title -- #}
{% block title %}Ajouter produit{% endblock %}

{# -- titre page -- #}

{% block title_page %}<h1>Créer une fiche produit</h1>{% endblock %}

{# -- contenu page -- #}

{% block main %}

{{ form_start(form) }}
	<form>
			<article id="newProduit">
					<table>
						<caption>
					  		<h3>PRODUIT</h3>
					  	</caption>
						<tr>
							 <th>Nom du produit *</th>
							 <td>
								 {{ form_row(form.prodName) }}
	 					 </td>
						</tr>
					  	<tr>
							<th>Catégorie du produit *</th>
							<td>
						     {{ form_row(form.prodCat) }}
							</td>
					  	</tr>
					  	<tr>
							<th>Référence du produit *</th>
							<td>

								{{ form_row(form.prodRef) }}
							</td>
						</tr>
					</table>

					<table>
						<caption>
					  		<h3>QUANTITE</h3>
					  	</caption>
						<tr>
							 <th>Achats neufs</th>
							 <td>
							 	{{ form_row(form.prodQty) }}
							 </td>
							 <th>Etat du produit</th>
							 <td>
							 	{{ form_row(form.prodState) }}
							 </td>
						</tr>
					</table>

					<table>
						<caption>
					  		<h3>FOURNISSEUR</h3>
					  	</caption>
						<tr>
							 <th>Nom du fournisseur *</th>
							 <td>

								{{ form_row(form.ProvidersList) }}
							 </td>
					</table>

					<table>
						<caption>
					  		<h3>PARTICULARITE</h3>
					  	</caption>
						<tr>
							 <th>Total produits défaillants *</th>
							 <td>

							 	{{ form_row(form.prodQtyDefect) }}

							 </td>
						</tr>
					</table>

					<table>
						<caption>
					  		<h3>DESCRIPTIF</h3>
					  	</caption>
						<tr>
							 <th>Nom de la photo : (png/jpg)</th>
							 <td>

								 {{ form_row(form.prodPicture) }}

							 </td>
						</tr>
					  	<tr>
					  		<th>Descriptif</th>

								<td>
									{{ form_row(form.prodDesc) }}
								</td>
					  	</tr>
					</table>
				<h6>* champs obligatoires</h6>
				<div id="button">
					  <input href="{{ path('product_new') }}" class="btn" type="submit" action="edit" value="Valider"/>
						<p value="Annuler"><span class="glyphicon glyphicon-remove">Annuler</span></p>
				</div>
		</form>
{{ form_end(form) }}

{% endblock %}
