{% extends 'NosBundlesProductBundle::layout.html.twig' %}

{# -- title -- #}
{% block title %}Ajouter produit{% endblock %}

{# -- titre page -- #}

{% block title_page %}<h1>Nom de la Catégorie</h1>{% endblock %}

{# -- contenu page -- #}

{% block main %}
{{ form(form, {'method': 'POST'}) }}
			<article id="newProduit">
					<table>
						<caption>
					  		<h3>PRODUIT</h3>
					  	</caption>
						<tr>
							 <th>Nom du produit *</th>
							 <td>
                 {{ form_row(form.Prodname) }}
							 </td>
						</tr>
					  	<tr>
							<th>Catégorie du produit *</th>
							<td>
								<form>
									<select name="nom" size="1">
									<option>aucune
									<option>Vêtements
									<option>Déguisements
									<option>Jeux Vidéos
								  <option>Livres
									<option>DVD
									<option>CD
									<option>Figurines
									<option>Cartes de Collection
									</select>
								</form>
							</td>
					  	</tr>
					  	<tr>
							<th>Référence du produit *</th>
							<td>
							 	<input type="text" required="required">
							</td>
						</tr>
					</table>

					<table>
						<caption>
					  		<h3>QUANTITE</h3>
					  	</caption>
						<tr>
							 <th>Achats neufs</th>
							 <td>
							 	<input type="text" value="">
							 </td>
							 <th>Achats occasion</th>
							 <td>
							 	<input type="text" value="">
							 </td>
						</tr>
					</table>

					<table>
						<caption>
					  		<h3>FOURNISSEUR</h3>
					  	</caption>
						<tr>
							 <th>Nom du fournisseur *</th>
							 <td>
							 	<input type="text" required="required">
							 </td>
						</tr>
					  	<tr>
							<th>Numéro de téléphone *</th>
							<td>
								<input type="text" required="required">
							</td>
					  	</tr>
					</table>

					<table>
						<caption>
					  		<h3>PARTICULARITE</h3>
					  	</caption>
						<tr>
							 <th>Total produits défaillants *</th>
							 <td>
							 	<input type="text" required="required">
							 </td>
						</tr>
					</table>

					<table>
						<caption>
					  		<h3>DESCRIPTIF</h3>
					  	</caption>
						<tr>
							 <th>Photo du produit (JPG/PNG) *</th>
							 <td>
							 	<input type="text" required="required" placeholder="nom de l'image">
							 </td>
						</tr>
					  	<tr>
					  		<th>Descriptif</th>
								<td><textarea placeholder="Descriptif du produit"></textarea></td>
					  	</tr>
					</table>
				<h6>* champs obligatoires</h6>
				<div class="button">
					<button class="btn">Valider la fiche produit</button>
					<button class="btn">Annuler</button>
					<button class="btn">Effacer tous les champs</button>
				</div>
		</article>
{{ form_end(form) }}
{% endblock %}
