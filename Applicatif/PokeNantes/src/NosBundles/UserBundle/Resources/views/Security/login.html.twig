{#% extends "FOSUserBundle::layout.html.twig" %#}
{% extends "NosBundlesUserBundle::layout.html.twig" %}

{% block title %}PokeNantes{% endblock %}

{% block fos_user_content %}

<div class="back-titre-page">
	<div class="zone-titre-page"><img src="{{asset('bundles/frameworkPoke/img/picto-h2.png')}}"/>
		<h2>
			Bienvenue ! Connectez-vous à votre session.
		</h2>
	</div>
</div>

  {# S'il y a une erreur, on l'affiche dans un joli cadre #}

<main class="zone-connexion">

	  {% if error %}
	      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	  {% endif %}

  {# Le formulaire, avec URL de soumission vers la route « login_check »  #}

  <form  class="form-connexion" action="{{ path("fos_user_security_check") }}" method="post">

  <form action="{{ path("fos_user_security_check") }}" method="post" class="form-connexion">

      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

			<div class="control-group">
				<span class="input input--haruki">
					<input class="input__field input__field--haruki" type="text" id="username" name="_username" />
          <label class="input__label input__label--haruki" for="username">
							<span class="input__label-content input__label-content--haruki">
								{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}
							</span>
					</label>
				</span>
      </div>

      <div class="control-group">
				<span class="input input--haruki">
					<input class="input__field input__field--haruki" type="password" id="password" name="_password" />
          <label class="input__label input__label--haruki" for="password">
          		<span class="input__label-content input__label-content--haruki">
								{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}
							</span>
					</label>
				</span>
      </div>

      <div class="zone-identifiant">
				<div class="identifiant">
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
          <label class="control-label" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
				</div>
				<div class="identifiant">
					<a href="#" class="identifiant">J'ai perdu mes identifiants de connexion</a>
				</div>
      </div>

      <div class="button">
          <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
				</div>
	  </form>	
</main>

<script src="{{ asset('bundles/frameworkPoke/js/classie.js') }}"></script>
<script src="{{ asset('bundles/frameworkPoke/js/haruki.js') }}"></script>

{% endblock fos_user_content %}
